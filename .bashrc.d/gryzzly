# Here is a list of variable usefull for development.
export GRYZZLY=${GOPATH}/src/gitlab.com/gryzzlybot
export BOT_DEBUG=1
export REPORT_DEBUG=1

# The following variables are used for database configuration
# in Gryzzly CLIs.
export DB_HOST=localhost
export DB_USERNAME=pizzly
export DB_PASSWORD=pizzly
export API_DB_HOST=$DB_HOST
export API_DB_USER=$DB_USERNAME
export API_DB_PASS=$DB_PASSWORD

